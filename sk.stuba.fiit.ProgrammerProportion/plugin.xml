<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension 
   		point="org.eclipse.ui.commands">
    	<command 
    		categoryId="sk.stuba.fiit.ProgrammerProportion.commands.category"
      		id="sk.stuba.fiit.ProgrammerProportion.commands.authorsCommand" 
      		name="authorsCommand">
    	</command>
  	</extension>
  	<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="sk.stuba.fiit.programmerproportion.handlers.AuthorsHandler"
            commandId="sk.stuba.fiit.ProgrammerProportion.commands.authorsCommand">
      </handler>
   	</extension>
	<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="sk.stuba.fiit.ProgrammerProportion.commands.authorsCommand"
               id="sk.stuba.fiit.ProgrammerProportion.menus.sampleCommand"
               label="Assign Authors"
               mnemonic="S"
               style="push">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.eclipse.jdt.core.IJavaProject">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
